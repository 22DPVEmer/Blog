@model Blog.Infrastructure.Entities.Article

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent px-0">
                    <li class="breadcrumb-item"><a asp-action="Index">Articles</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
                </ol>
            </nav>

            <article>
                @if (!string.IsNullOrEmpty(Model.FeaturedImage))
                {
                    <div class="featured-image-container">
                        <img src="@Model.FeaturedImage" class="featured-image" alt="@Model.Title">
                    </div>
                }

                <h1 class="display-4 mb-4">@Model.Title</h1>

                <div class="article-metadata">
                    <div>
                        <i class="bi bi-person-circle"></i>
                        <span>By @Model.User.UserName</span>
                    </div>
                    <div>
                        <i class="bi bi-calendar3"></i>
                        <span>@Model.PublishedAt?.ToString("MMMM dd, yyyy")</span>
                    </div>
                    @if (Model.UpdatedAt.HasValue && Model.UpdatedAt != Model.CreatedAt)
                    {
                        <div>
                            <i class="bi bi-clock-history"></i>
                            <span>Updated @Model.UpdatedAt?.ToString("MMMM dd, yyyy")</span>
                        </div>
                    }
                </div>

                <div class="article-content">
                    @Html.Raw(Model.Content)
                </div>

                @if (User.Identity.IsAuthenticated && 
                    (Model.UserId == UserManager.GetUserId(User) || 
                     User.IsInRole("Administrator")))
                {
                    <div class="article-actions">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                            <i class="bi bi-pencil"></i> Edit Article
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                            <i class="bi bi-trash"></i> Delete Article
                        </a>
                    </div>
                }
            </article>
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Fira+Code&display=swap" rel="stylesheet">
    <link href="~/css/article-details.css" rel="stylesheet">
}
